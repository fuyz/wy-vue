{
  "compilerOptions": {
    "outDir": "/",
    // "target": "es2018",
    "target": "es6",
    // "module": "esnext",
    "moduleResolution": "node",
    "module": "es2015",
    "lib": [
      "esnext",
      "esnext.asynciterable",
      "dom",
      "es2020.promise"
    ],
    "esModuleInterop": true,
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    // "noEmit": true,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": false,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "~/*": [
        "./*"
      ],
      "@/*": [
        "src/*"
      ]
    },
    "types": [
      "@types/node"
    ]
  },
  "exclude": [
    "node_modules", "public"
  ],
}